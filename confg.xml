<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        xmlns:android   = "http://schemas.android.com/apk/res/android"
        id          = "com.podiatrypatient.portal"
        versionCode = "10" 
        version     = "1.0.1" >

    <!-- versionCode is optional and Android only -->

    <name>Patient Education Portal</name>

    <description>
       This applications will provide podiatric medical patients with basic information about different pathologies
       of the foot and ankle. It will provide them educational materials on how to go about treating these pathologies,
       and will encourage patient contact with local health providers 
    </description>

    <author href="https://www.podiatrywebsolutions.com" email="info@podiatrywebsolutions.com">
        Podiatry Web Solutions LLC
    </author>
	
	<gap:platform name="ios" />
	<gap:platform name="android" />
	
	
	<preference name="orientation" value="portrait" />
	<preference name="phonegap-version" value="3.5.0" />
	<preference name="LoadUrlTimeoutValue" value="10000"/>
	<preference name="LoadingDialog" value="Please wait, the app is loading"/>
	<preference name="AllowInlineMediaPlayback" value="true"/>
	<preference name="SplashScreenDelay" value="7000"/>
	<preference name="KeepRunning" value="true"/>
	
 <!-- Core plugins -->
    <gap:plugin name="org.apache.cordova.battery-status" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.media-capture" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.contacts" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-motion" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.globalization" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />

	<icon src="icon.png" />
	<icon src="icon/android/icon-36-ldpi.png"   gap:platform="android"    gap:qualifier="ldpi" />
    <icon src="icon/android/icon-48-mdpi.png"   gap:platform="android"    gap:qualifier="mdpi" />
    <icon src="icon/android/icon-72-hdpi.png"   gap:platform="android"    gap:qualifier="hdpi" />
    <icon src="icon/android/icon-96-xhdpi.png"  gap:platform="android"    gap:qualifier="xhdpi" />
	<icon src="icon/ios/icon-40.png"            gap:platform="ios"        width="40" height="40" />
	<icon src="icon/ios/icon-40@2x.png"         gap:platform="ios"        width="80" height="80" />
	<icon src="icon/ios/icon-60.png"            gap:platform="ios"        width="60" height="60" />
	<icon src="icon/ios/icon-60@2x.png"         gap:platform="ios"        width="120" height="120" />
    <icon src="icon/ios/icon-76.png"            gap:platform="ios"        width="76" height="76" />
    <icon src="icon/ios/icon-76@2x.png"         gap:platform="ios"        width="152" height="152" />
    <icon src="icon/ios/icon-small"             gap:platform="ios"        width="29" height="29" />
    <icon src="icon/ios/icon-small@2x.png"      gap:platform="ios"        width="58" height="58" />
    
    <gap:splash src="splash.png" />
    <gap:splash src="splash/android/screen-ldpi-portrait.png"       gap:platform="android" gap:qualifier="port-ldpi" />
    <gap:splash src="splash/android/screen-mdpi-portrait.png"       gap:platform="android" gap:qualifier="port-mdpi" />
    <gap:splash src="splash/android/screen-hdpi-portrait.png"       gap:platform="android" gap:qualifier="port-hdpi" />
    <gap:splash src="splash/android/screen-xhdpi-portrait.png"      gap:platform="android" gap:qualifier="port-xhdpi" />
	<gap:splash src="splash/ios/Default.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="splash/ios/Default@2x.png" gap:platform="ios" width="640" height="960" />
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<gap:splash src="splash/ios/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />
	<!-- iPad -->
	<gap:splash src="splash/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
	<gap:splash src="splash/ios/Default-Landscape.png" gap:platform="ios" width="1024" height="768" />
	<!-- Retina iPad -->
	<gap:splash src="splash/ios/Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048" />
	<gap:splash src="splash/ios/Default-Landscape@2x.png" gap:platform="ios" width="2048" height="1536" />	
  	
  	
  		<gap:config-file platform="android" parent="/manifest">
		<supports-screens 
			android:xlargeScreens="false" 
			android:largeScreens="false" 
			android:smallScreens="false" />
	</gap:config-file>

  	<access origin="*"/>

</widget>